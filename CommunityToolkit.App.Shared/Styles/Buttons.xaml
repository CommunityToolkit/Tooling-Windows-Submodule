              Background="#FFC225"
              CornerRadius="4">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="Black"
                       Text="LABS" />
        </Grid>
    </DataTemplate>
